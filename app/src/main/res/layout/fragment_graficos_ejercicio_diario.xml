<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GraficosEjercicioDiario"
    android:background="#1a1a1a">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/viewActividad"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/view_radius_grey"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/textMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movimiento"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/viewActividad"
        app:layout_constraintLeft_toLeftOf="@id/viewActividad"
        app:layout_constraintBottom_toTopOf="@id/textEjercicio"
        android:elevation="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/textEjercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textMovimiento"
        app:layout_constraintLeft_toLeftOf="@id/viewActividad"
        app:layout_constraintBottom_toTopOf="@id/textDePie"
        android:elevation="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/textDePie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De pie"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textEjercicio"
        app:layout_constraintLeft_toLeftOf="@id/viewActividad"
        app:layout_constraintBottom_toBottomOf="@id/viewActividad"
        android:elevation="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/Movimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="989/1000kcal"
        android:textColor="#ff004c"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textMovimiento"
        app:layout_constraintLeft_toLeftOf="@id/textMovimiento"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/Ejercicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="147/60min"
        android:textColor="#62fc03"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textEjercicio"
        app:layout_constraintLeft_toLeftOf="@id/textEjercicio"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/DePie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/10h"
        android:textColor="@color/teal_200"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textDePie"
        app:layout_constraintLeft_toLeftOf="@id/textDePie"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <org.eazegraph.lib.charts.PieChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piechart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="30dp"
        app:layout_constraintTop_toTopOf="@id/viewActividad"
        app:layout_constraintRight_toRightOf="@id/viewActividad"
        app:layout_constraintBottom_toBottomOf="@id/viewActividad"
        android:elevation="20dp"
        />
    <View
        android:id="@+id/viewMindfulness1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/viewActividad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/view_radius_grey"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/textPasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasos"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/viewMindfulness1"
        app:layout_constraintLeft_toLeftOf="@id/viewMindfulness1"
        app:layout_constraintRight_toLeftOf="@id/textDistancia"
        app:layout_constraintBottom_toTopOf="@id/Pasos"
        android:elevation="20dp"
        />
    <TextView
        android:id="@+id/textDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distancia"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/viewMindfulness1"
        app:layout_constraintRight_toRightOf="@id/viewMindfulness1"
        app:layout_constraintLeft_toRightOf="@id/textPasos"
        app:layout_constraintBottom_toTopOf="@id/Distancia"
        android:elevation="20dp"
        />
    <TextView
        android:id="@+id/Pasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.468"
        android:textColor="#6b6b6b"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textPasos"
        app:layout_constraintLeft_toLeftOf="@id/textPasos"
        app:layout_constraintRight_toRightOf="@id/textPasos"
        app:layout_constraintBottom_toBottomOf="@id/viewMindfulness1"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/Distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8,02km"
        android:textColor="#6b6b6b"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textDistancia"
        app:layout_constraintRight_toRightOf="@id/textDistancia"
        app:layout_constraintLeft_toLeftOf="@id/textDistancia"
        app:layout_constraintBottom_toBottomOf="@id/viewMindfulness1"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/EntrenoHoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrenamientos de hoy"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/viewMindfulness1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ViewEntreno1"
        android:elevation="20dp"
        android:layout_margin="25dp"
        />
    <View
        android:id="@+id/ViewEntreno1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/EntrenoHoy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/view_radius_grey"
        android:elevation="10dp"
        />
    <ImageView
        android:id="@+id/imageEntrenoFuncional"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icono_entreno_funcional"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/ViewEntreno1"
        app:layout_constraintLeft_toLeftOf="@id/ViewEntreno1"
        app:layout_constraintBottom_toBottomOf="@id/ViewEntreno1"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/textEntreno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entreno funcional de \nfuerza"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/ViewEntreno1"
        app:layout_constraintLeft_toRightOf="@id/imageEntrenoFuncional"
        app:layout_constraintBottom_toTopOf="@id/kcalEntreno1"
        android:elevation="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/kcalEntreno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85kcal"
        android:textColor="#62fc03"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/textEntreno1"
        app:layout_constraintLeft_toLeftOf="@id/textEntreno1"
        app:layout_constraintBottom_toBottomOf="@id/ViewEntreno1"
        android:elevation="20dp"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/ViewEntreno2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/ViewEntreno1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/view_radius_grey"
        android:elevation="10dp"
        />
    <ImageView
        android:id="@+id/imageEntrenoMaquinas"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icono_entreno_maquinas"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/ViewEntreno2"
        app:layout_constraintLeft_toLeftOf="@id/ViewEntreno2"
        app:layout_constraintBottom_toBottomOf="@id/ViewEntreno2"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/textEntreno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicios con maquinas"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/ViewEntreno2"
        app:layout_constraintLeft_toRightOf="@id/imageEntrenoMaquinas"
        app:layout_constraintBottom_toTopOf="@id/kcalEntreno2"
        android:elevation="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/kcalEntreno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="427kcal"
        android:textColor="#62fc03"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/textEntreno2"
        app:layout_constraintLeft_toLeftOf="@id/textEntreno2"
        app:layout_constraintBottom_toBottomOf="@id/ViewEntreno2"
        android:elevation="20dp"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>