<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    >

    <View
        android:id="@+id/viewPrincipal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/boton_redondo"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ff004c"
        app:layout_constraintTop_toTopOf="@id/viewPrincipal"
        app:layout_constraintLeft_toLeftOf="@id/viewPrincipal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/zona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintLeft_toLeftOf="@id/nombre"
        app:layout_constraintBottom_toBottomOf="@id/viewPrincipal"
        android:elevation="10dp"
        android:textStyle="italic"
        />
    <ImageView
        android:id="@+id/imagenEjercicio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/viewPrincipal"
        app:layout_constraintRight_toRightOf="@id/viewPrincipal"
        app:layout_constraintBottom_toBottomOf="@id/viewPrincipal"
        android:elevation="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>